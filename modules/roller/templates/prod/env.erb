PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# You must set this
DJANGO_SECRET_KEY=<%= @django_secret_key %>

CELERY_TASK_SOFT_TIME_LIMIT=2000
CELERY_TASK_TIME_LIMIT=3000

# Only override this if you need something different from the default
ALLOWED_HOSTS=roller1.srv.releng.mdc1.mozilla.com,roller1.srv.releng.mdc2.mozilla.com
CORS_ORIGIN=https://tools.taskcluster.net
USE_X_FORWARDED_HOST=True

# Get these settings from Taskcluster
TASKCLUSTER_CLIENT_ID=<%= @taskcluster_client_id %>
TASKCLUSTER_ACCESS_TOKEN=<%= @taskcluster_access_token %>

REQUIRED_TASKCLUSTER_SCOPE_SETS=project:releng:roller:*
TASK_NAMES=ping,ipmi_list,ipmi_status,ipmi_reset,ipmi_cycle,ipmi_off,ipmi_on,reboot,file_bugzilla_bug
REBOOT_METHODS=ssh_reboot,snmp_rebootdelay,ipmi_reset,ipmi_cycle,ipmi_on,file_bugzilla_bug

VALID_WORKER_ID_REGEX=^.*(MS|ms|yosemite)-.*

BUGZILLA_API_KEY=<%= @bugzilla_api_key %>
BUGZILLA_URL=https://bugzilla.mozilla.org
BUGZILLA_REBOOT_TEMPLATE={"api_key":"${api_key}","product":"Infrastructure & Operations","component":"RelOps: Hardware","cc":"${cc}","summary":"[${DC}] ${alias} is unreachable","version":"unspecified","description":"Reboot ${hostname} ${ip}\nRequested by ${client_id}\nRelops controller action failed:${log}","blocks":"${blocks}"}

NOTIFY_EMAIL=relops-hardware-controller@mozilla.com
NOTIFY_IRC_CHANNEL=#roller

DOWN_TIMEOUT=60
UP_TIMEOUT=120
